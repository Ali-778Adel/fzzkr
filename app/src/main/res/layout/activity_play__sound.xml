<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AzkarElmasa2.Play_Sound"
    android:background="@color/Moccasin">
    <LinearLayout
        android:id="@+id/lout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="10dp"

        >
        <TextView
            android:id="@+id/phon_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="phone"
            android:textSize="22sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/phone_edit_txxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="22sp"


            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_margin="10dp"
        android:layout_below="@id/lout1"
        android:layout_marginVertical="16dp"
        >
        <TextView
            android:id="@+id/msg_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="message"
            android:textSize="22sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/msg_edit_txxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lout2"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/save_to_shared"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="save"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Peru"

            />
        <Button
            android:id="@+id/get_from_shared"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="return"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Peru"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lout3"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/save_to_internak"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="save to internal "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Peru"

            />
        <Button
            android:id="@+id/get_from_internal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="return From internal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Peru"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lout4"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/save_to_sq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="save to data base "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Peru"

            />
        <Button
            android:id="@+id/get_from_sq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="return From data base"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Peru"

            />
    </LinearLayout>
    <Button
        android:id="@+id/net_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/Peru"
        android:layout_below="@+id/lout4"
        android:layout_marginTop="124dp"
        android:layout_centerInParent="true"
        />
</RelativeLayout>