<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical"
    android:background="@drawable/mystaticback"

    >


    <Button
        android:id="@+id/zekr_sabah"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="اذكار الصباح"
        android:textColor="@color/Black"
        android:textSize="32sp"
        android:layout_weight="1"
        android:background="@drawable/mainelemtsshape"
        android:layout_marginTop="100dp"
android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="70dp"
        android:backgroundTintMode="screen"



        />

    <Button
        android:id="@+id/zekr_masaa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/azkar_elmasaa"
        android:textSize="32sp"
        android:layout_weight="1"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/mainelemtsshape"
        android:backgroundTintMode="screen"

   />

    <Button
        android:id="@+id/seb7a"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="السبحة "
        android:textSize="32sp"
        android:layout_weight="1"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="70dp"
        android:background="@drawable/mainelemtsshape"
        android:backgroundTintMode="screen"


        />

    <Button
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:text="حول التطبيق"
        android:textSize="32sp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="70dp"
        android:layout_weight="1"
        android:background="@drawable/mainelemtsshape"
        android:backgroundTintMode="screen"

        />
    <Button
        android:id="@+id/close_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:text="حول التطبيق"
        android:textSize="32sp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="70dp"
        android:layout_weight="1"
        android:background="@drawable/mainelemtsshape"
        android:backgroundTintMode="screen"

        />

</LinearLayout>
</RelativeLayout>